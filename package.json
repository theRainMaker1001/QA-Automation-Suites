{
  "name": "automatedtesting",
  "version": "1.0.0",
  "description": "Professional QA automation suite with TypeScript, linting, formatting, and CI integration.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build:api": "tsc -p api/tsconfig.json",
    "test:api": "node --loader ts-node/esm api/src/tests/healthcheck.test.ts",
    "clean": "rimraf dist api/dist",
    "check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts --format stylish",
    "fmt": "prettier --write .",
    "prepare": "husky install",
    "start": "ts-node ./e2e/tests/index.ts",
    "dev": "ts-node --watch ./e2e/tests/index.ts"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "qa",
    "automation",
    "testing",
    "typescript",
    "ci-cd",
    "playwright"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.8.1",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
